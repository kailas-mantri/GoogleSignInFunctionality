<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/organization_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/organization_image"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Category"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:id="@+id/text_category"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/organization_image"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Category"
            android:layout_below="@id/text_category"
            android:layout_marginStart="15dp"
            android:id="@+id/category"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/organization_image"
            android:layout_marginTop="10dp"
            android:text="Organization"
            android:textStyle="bold"
            android:id="@+id/text_organization_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_organization_title"
            android:text="Organization"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/organization_title"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>