<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/image_navigation"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_navigation"
        android:layout_marginTop="7dp"
        android:text="Scrimatec IT Solutions"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/name_navigation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_navigation"
        android:text="AndroidDeveloper@scrimatec.com"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/email_navigation"/>

</RelativeLayout>