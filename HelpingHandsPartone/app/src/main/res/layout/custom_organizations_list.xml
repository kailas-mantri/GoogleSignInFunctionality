<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/swipeLayout"
    android:orientation="vertical"
    app:clickToClose="true">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:id="@+id/linearlayoutswiperight"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:text="Delete"
            android:id="@+id/delete_slider_item"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_delete"
            android:paddingLeft="10dp"
            android:drawableTint="@android:color/white"
            android:drawablePadding="30dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:id="@+id/linearlayoutswipeleft"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark"
            android:text="Update"
            android:id="@+id/update_slider_item"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_update"
            android:paddingLeft="10dp"
            android:drawableTint="@android:color/white"
            android:drawablePadding="30dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_organizations"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/title_organizations"
            android:text=""
            android:layout_toRightOf="@id/image_organizations"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_organizations"
            android:id="@+id/type_organizations"
            android:layout_toRightOf="@id/image_organizations"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_organizations"
            android:id="@+id/description_organization"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/image_organizations"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>