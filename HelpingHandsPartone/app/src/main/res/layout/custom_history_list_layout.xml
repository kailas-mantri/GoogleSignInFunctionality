<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/paytm"
        app:riv_border_color="@android:color/darker_gray"
        app:riv_border_width="1dp"
        android:id="@+id/imagePaytm"
        android:layout_centerVertical="true"
        app:riv_corner_radius="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagePaytm"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:id="@+id/text_transaction_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagePaytm"
        android:layout_below="@id/text_transaction_id"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_toStartOf="@id/text_amount"
        android:id="@+id/text_org_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_transaction_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textStyle="bold"
        android:id="@+id/text_amount"/>

</RelativeLayout>