<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin.AdminOrganizationActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Organisations"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
        android:background="@color/background_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:id="@+id/organization_basic_details">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/admin_organization_image_upload"
            android:scaleType="fitXY"
            android:background="@drawable/ic_person" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization_title"
            android:layout_toRightOf="@id/admin_organization_image_upload"
            android:layout_marginLeft="15dp"
            android:id="@+id/admin_organization_title_upload"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="textStart"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization_type"
            android:layout_toRightOf="@id/admin_organization_image_upload"
            android:layout_below="@id/admin_organization_title_upload"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textAlignment="textStart"
            android:gravity="start"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_organization_image_upload"
            android:layout_marginTop="15dp"
            android:id="@+id/admin_organization_location">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textAlignment="textStart"
                android:gravity="start"
                android:hint="Organization Location"
                android:layout_marginTop="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/admin_organization_location"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:background="@android:color/darker_gray"
            android:id="@+id/images_of_organization">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/first_image_of_organization"
                android:scaleType="fitXY"
                android:background="@color/dayBackground"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/second_image_of_organization"
                android:layout_toRightOf="@id/first_image_of_organization"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:background="@color/dayBackground"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/third_image_of_organization"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/second_image_of_organization"
                android:scaleType="fitXY"
                android:background="@color/dayBackground"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/fourth_image_of_organization"
                android:layout_toRightOf="@id/third_image_of_organization"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:background="@color/dayBackground"/>

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/admin_organization_description_title"
            android:layout_below="@id/images_of_organization">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="textStart"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:hint="@string/organization_description_title" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

</RelativeLayout>